---
import BaseLayout from "../../layouts/BaseLayout.astro";

const posts = [
  {
    slug: "welcome",
    title: "Welcome!",
    date: "March 31, 2025",
    excerpt: "Website's online and one book is available on Kindle!",
  },
];
---

<BaseLayout
  title="Posts - J. Allan MacDonald"
  description="Blog posts and updates from J. Allan MacDonald"
  currentPath="/posts/"
>
  <section class="section-header" data-animate>
    <span class="eyebrow">News & Updates</span>
    <h1 class="section-title">Posts</h1>
  </section>

  <section class="posts-grid" data-animate style="--delay: 0.15s;">
    {posts.map((post) => (
      <a href={`/posts/${post.slug}/`} class="post-card">
        <span class="post-date">{post.date}</span>
        <h2 class="post-title">{post.title}</h2>
        <p class="post-excerpt">{post.excerpt}</p>
      </a>
    ))}
  </section>
</BaseLayout>
