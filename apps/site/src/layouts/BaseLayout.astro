---
const { title, description, currentPath } = Astro.props;
const year = new Date().getFullYear();
const navLinks = [
  { href: "/", label: "Home" },
  { href: "/posts/", label: "Posts" },
  { href: "/about/", label: "About" },
];
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="color-scheme" content="light dark" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Crimson+Pro:ital,wght@0,400..700;1,400..700&family=DM+Sans:wght@400;500;600;700&family=Playfair+Display:wght@500;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" href="/assets/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/apple-touch-icon.png" />
    <meta name="theme-color" content="#faf6ef" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#151518" media="(prefers-color-scheme: dark)" />
    <link rel="stylesheet" href="/assets/styles.css" />
  </head>
  <body>
    <header class="site-header" data-animate>
      <a class="brand" href="/">
        <span class="brand-title">J. Allan MacDonald</span>
        <span class="brand-tag">Author of Pointless Magical Relics</span>
      </a>
      <nav class="site-nav" aria-label="Primary">
        {navLinks.map((link) => (
          <a
            class:list={["nav-link", currentPath === link.href && "active"]}
            aria-current={currentPath === link.href ? "page" : undefined}
            href={link.href}
          >
            {link.label}
          </a>
        ))}
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <div>&copy; {year} J. Allan MacDonald</div>
      <nav class="footer-links" aria-label="Footer">
        <a href="https://www.amazon.com/stores/J.-Allan-MacDonald/author/B0F33W5CJT" target="_blank" rel="noopener">
          Amazon
        </a>
        <a href="https://thelongwaymac.com" target="_blank" rel="noopener">
          Travel Blog
        </a>
      </nav>
    </footer>

    <slot name="scripts" />
  </body>
</html>
